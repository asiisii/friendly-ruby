<% if user_signed_in? %>

  <h1>Friends List</h1>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nme</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td><u><%= link_to friend.first_name + " " +  friend.last_name, friend %></u></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Update Info', edit_friend_path(friend), class:"btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to 'Remove', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-success" %>
<% else %>
  <h1>Home Page</h1>
  <p>First Rails Webpage!!</p>


<% end %>